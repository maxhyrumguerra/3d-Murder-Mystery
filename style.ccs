body {
  margin: 0;
  overflow: hidden;
  font-family: Arial, sans-serif;
  background-color: #87ceeb;
  color: white;
  text-align: center;
  user-select: none;
}

h1, p {
  position: absolute;
  width: 100%;
  z-index: 2;
  margin: 0;
  padding: 8px;
  background: rgba(0, 0, 0, 0.3);
  box-sizing: border-box;
}

h1 {
  top: 0;
  font-size: 24px;
}

p {
  top: 40px;
  font-size: 16px;
}
